<div id="sidebar">
  <div id="box1" class="box-style">
    <div class="title">
      <h2><span>Categorías destacadas</span></h2>
    </div>
    <div class="content">
      <ul>
        <% if can? :new_arrivals, :products %>
          <li><%= link_to "Novedades (#{Product.new_arrivals.count})", new_arrivals_products_path %></li>
        <% else %>
          <li><%= link_to "Novedades (#{Product.new_arrivals.count})", pages_new_arrivals_path    %></li>
        <% end %>
      </ul>
      <p><%= link_to "Ver todas las categorías", categories_path, :class => "link1" %></p>
    </div>
  </div>
  <div id="box2" class="box-style">
    <div class="title">
      <h2><span>Otras categorías</span></h2>
    </div>
    <div class="content">
      <ul>
        <% Category.all.each do |category| %>
          <li><%= link_to "#{category.name} (#{category.products.accessible_by(current_ability).count} productos)", category_products_path(category) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
