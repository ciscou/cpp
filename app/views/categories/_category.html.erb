<%= div_for category, :class => "item-box" do %>
  <h2><%= link_to_unless_current category.name, category_products_path(category) %></h2>
  <p><%= link_to_unless_current(
    image_tag(category.picture_url(picture_version), :class => "alignleft", :alt => category.name),
    category_products_path(category)
  ) %></p>
  <%= simple_format category.description %>
  <% if admin_signed_in? %>
    <p>
      <%= link_to "Editar", edit_category_path(category) %> |
      <%= link_to "Eliminar", category, :method => :delete, :confirm => "¿Estás seguro?" %>
    </p>
  <% end %>
<% end %>
