<% title       @category.name %>
<% description @category.description %>

<div id="box6" class="box-style">

<% cache_category_products(@category) do %>
<div class="title">
  <h2><span>
    <%= link_to "Catálogo", categories_path %> &rsaquo;
    <%= @category.name %>
  </span></h2>
</div>

<% if @products.any? %>
  <%= render "listing", products: @products %>
<% else %>
  <div class="content">
    <p>Lo sentimos, no se ha encontrado ningún producto en la categoría <%= @category.name %></p>
  </div>
<% end %>
<% end %>

<% if current_user_is_admin? %>
  <div class="content">
    <p>
      <%= link_to 'Añadir otro producto a esta categoría', new_category_product_path(@category) %>
    </p>
  </div>
<% end %>

</div>
