<%= form_for [@category, @product], :html => { :multipart => true } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>Se han producido <%= @product.errors.count %> error(es) al intentar guardar este producto:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Nombre" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "Descripción" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.check_box :new_arrival %>
    <%= f.label     :new_arrival, "¿Novedad?" %>
  </div>
  <div class="field">
    <%= f.label :decoration_code, "Decoración de la foto" %><br />
    <%= f.select :decoration_code, Decoration::DECORATIONS.map { |k, v| [v, k] } %>
  </div>
  <div class="field">
    <%= f.label :picture, "Foto" %><br />
    <%= f.file_field :picture %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>
