<%= title @product.name %>
<%= description @product.description %>

<div id="box7" class="box-style">
  <div class="title">
    <h2><span>
      <%= link_to "Catálogo", categories_path %> &rsaquo;
      <%= link_to @product.category.name, category_products_path(@product.category) %> &rsaquo;
      <%= @product.name %>
    </span></h2>
  </div>

  <div class="content">

    <%= div_for @product do %>

      <%= image_tag @product.picture_url %>
      <p>En la categoría de <span class="category"><%= link_to @product.category.name, category_products_path(@product.category) %></span></p>
      <% if @product.decoration.name.present? %>
        <p>
        La decoración de la foto es <%= link_to(@product.decoration.name, search_products_path(:decoration_code => @product.decoration.code)) %>
        </p>
      <% end %>
      <% if @product.category.decorations.any? %>
        <p>
        También disponible en estas decoraciones:
        <%= @product.category.decorations.map { |decoration| link_to(decoration.name, search_products_path(:decoration_code => decoration.code), :style => "text-decoration: underline;") }.to_sentence.html_safe %>
        </p>
      <% end %>
      <%= simple_format @product.description %>

      <% if can? :manage, :products %>
        <p>
          <%= link_to "Editar", edit_category_product_path(@product.category, @product) %> |
          <%= link_to "Eliminar", [@product.category, @product], :method => :delete, :confirm => "¿Estás seguro?" %>
        </p>
      <% end %>

    <% end %>

  </div>

</div>
