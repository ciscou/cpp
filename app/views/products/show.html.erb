<% title @product.name %>

<div id="box7" class="box-style">
  <div class="title">
    <h2><span>
      <%= link_to @product.category.name, category_products_path(@product.category) %>
      &gt;
      <%= @product.name %>
    </span></h2>
  </div>
  <%= render @product, :picture_version => nil %>
  <div class="content">
    <%= simple_format @product.description %>
  </div>
</div>
